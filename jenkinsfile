pipeline {
    agent any

    environment {
        GIT_REPO = 'https://github.com/VikashAdhikari/WebAppA.git'
        AWS_REGION = 'us-east-1'
        CODEDEPLOY_APPLICATION = 'EC2-On-premise-'
        CODEDEPLOY_DEPLOYMENT_GROUP = 'deployment'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url: "$https://github.com/VikashAdhikari/WebAppA.git", branch: 'main'
            }
        }

        stage('Deploy with CodeDeploy') {
            steps {
                script {
                    withAWS(region: "$us-east-1", credentials: 'aws-credentials-id') {
                        awsCodeDeploy(
                            applicationName: "$EC2-On-premise-",
                            deploymentGroupName: "$deployment",
                            revisionType: 'github',
                            repositoryName: 'WebAppA',
                            commitId: 'latest'
                        )
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment successful'
        }
        failure {
            echo 'Deployment failed'
        }
    }
}
